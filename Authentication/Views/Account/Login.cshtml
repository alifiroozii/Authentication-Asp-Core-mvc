<!DOCTYPE html>
<html lang="fa">
<head>

    <title>ورود </title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Styles -->
    <link type="text/css" href="~/LoginPage/css/bootstrap-rtl.css" rel="stylesheet" />
    <link type="text/css" href="~/LoginPage/css/font-awesome.min.css" rel="stylesheet" />
    <link type="text/css" href="~/LoginPage/css/animate.css" rel="stylesheet" />
    <link type="text/css" href="~/LoginPage/css/hamburgers.min.css" rel="stylesheet" />
    <link type="text/css" href="~/LoginPage/css/select2.min.css" rel="stylesheet" />
    <link type="text/css" href="~/LoginPage/css/util.css" rel="stylesheet" />
    <link type="text/css" href="~/LoginPage/css/style.css" rel="stylesheet" />
    <!-- / styles -->

</head>

<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">

                <!-- input form -->
                <form asp-action="Login" class="login100-form validate-form">
                    <span class="login100-form-title">ورود به ناحیه کاربری</span>

                    <!-- enter email-->
                    <div class="wrap-input100 validate-input" data-validate="لطفا شماره موبایل خود را وارد کنید!">
                        <input asp-for="Mobile" class="input100" type="text"  placeholder="موبایل">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-mobile" aria-hidden="true"></i>
                        </span>
                    </div>
                    <!-- / enter email -->
                    <!-- enter password-->
                    <div  class="wrap-input100 validate-input" data-validate="لطفا رمز عبور را وارد کنید!">
                        <input asp-for="Password" class="input100" type="password" placeholder="رمز عبور">
                        <span asp-validation-for="Password"  class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <!-- / enter password-->
                    <!-- login button-->
                    <div class="container-login100-form-btn">
                        <input type="submit" value="ورود" class="login100-form-btn"/>
                    </div>
                    <!-- / login button -->
                    <!-- restore password -->
                    <div class="text-center p-t-12">
                        <a class="txt2" href="#">
                            بازگردانی رمز عبور!
                        </a>
                    </div>
                    <!-- / restore password-->
                    <!-- register-->
                    <div class="text-center p-t-136">
                        <a class="txt2" href="#">
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            هنوز ثبت نام نکرده اید ؟
                        </a>
                    </div>
                    <!-- / register-->

                </form>
                <!-- / input form -->
                <!-- form image -->
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/LoginPage/pics/img-01.png" alt="IMG">
                </div>
                <!-- / form image -->

            </div>
        </div>
    </div>


    <!-- scripts -->
    <script src="~/LoginPage/js/jquery-3.2.1.min.js"></script>
    <script src="~/LoginPage/js/popper.min.js"></script>
    <script src="~/LoginPage/js/bootstrap.min.js"></script>
    <script src="~/LoginPage/js/select2.min.js"></script>
    <script src="~/LoginPage/js/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="~/LoginPage/js/scripts.js"></script>
    <!-- / scripts -->

</body>
</html>


